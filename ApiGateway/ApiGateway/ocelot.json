{
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5290" // Gateway url
  },
  "Routes": [
    {
      // To gateway
      "UpstreamPathTemplate": "/auth/{everything}",
      "UpstreamHttpMethod": [ "Post" ],

      // From gateway
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5043
        }
      ],
      "DownstreamPathTemplate": "/api/auth/{everything}"
    },

    // -------------- To coin service --------------
    {
      "UpstreamPathTemplate": "/coins/{everything}",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5163
        }
      ],
      "DownstreamPathTemplate": "/api/Coins/{everything}"
    },
    {
      "UpstreamPathTemplate": "/coins",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5163
        }
      ],
      "DownstreamPathTemplate": "/api/Coins",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      },
      "RouteClaimsRequirement": {
        "role": "User"
      },
      "AddHeadersToRequest": {
        "UserId": "Claims[sub] > value[0] > |"
      }
    },

    // -------------- To user service --------------
    {
      "UpstreamPathTemplate": "/users/{everything}",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5218
        }
      ],
      "DownstreamPathTemplate": "/api/Users/{everything}",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "RouteClaimsRequirement": {
        "Role": "User"
      }
    }
  ]
}
